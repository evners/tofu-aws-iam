################################################################################################################
###############################                 USERS                  #########################################
################################################################################################################

variable "users" {
  description = "List of IAM users to create."
  type = list(object({
    name          = string
    path          = optional(string, "/")
    force_destroy = optional(bool, false)
  }))
  default = []
}

################################################################################################################
###############################                 TAGS                   #########################################
################################################################################################################

variable "extra_tags" {
  description = "A map of extra tags to add to all resources created by the module."
  type        = map(string)
  default     = {}
}